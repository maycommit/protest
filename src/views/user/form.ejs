<form action=<%= user && user.id ? "/users/update/" + user.id: "/users/create" %> method="POST">
  <div class="form-group">
    <label>Nome</label>
    <input type="text" name="name" class="form-control" value=<%= user && user.name %>>
  </div>
  <div class="form-group">
    <label>E-mail</label>
    <input type="text" name="email" class="form-control" value=<%= user && user.email %>>
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="text" name="password" class="form-control" value=<%= user && user.password %>>
  </div>
  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
  </div>
</form>